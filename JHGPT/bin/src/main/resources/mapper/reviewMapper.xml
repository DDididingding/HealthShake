<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jhgpt.board.model.dao.ReviewDao">

    <!-- 리뷰 등록 -->
    <insert id="writeReview" parameterType="Review">
        INSERT INTO Review(review_id, video_id, member_id, title, content, rating)
        VALUES(#{review_id}, #{video_id}, #{member_id}, #{title}, #{content}, #{rating})
    </insert>
    
    <!-- 리뷰 전체 조회 -->
    <select id ="getReviewList" resultType="Review">
        SELECT *
        FROM Review
    </select>
    
    <!-- 리뷰 상세 조회 -->
    <select id ="selectReview" resultMap="reviewMap" parameterType="int">
        SELECT *
        FROM Review
        WHERE review_id = #{review_id};
    </select>
    
    <!-- 리뷰 수정 -->
    <update id="modifyReview" parameterType="Review">
        UPDATE Review
        SET content = #{content}
        WHERE review_id = #{review_id};
    </update>
    
    <!-- 리리 삭제 -->
    <delete id="deleteReview" parameterType="int">
        DELETE FROM Review
        WHERE review_id = #{review_id};
    </delete>
    
     <delete id="getReviewsForVideo" parameterType="int">
        SELECT *
        FROM Review
        WHERE video_id = #{video_id};
    </delete>
    
</mapper>
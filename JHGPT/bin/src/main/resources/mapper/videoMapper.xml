<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jhgpt.board.model.dao.VideoDao">

    <!-- 비디오 등록 -->
    <insert id="registVideo" parameterType="Video">
        INSERT INTO Video(video_id, trainer_id, video_title, video_url, price)
        VALUES(#{video_id}, #{trainer_id}, #{video_title}, #{video_url}, #{price}s)
    </insert>
    
    <!-- 비디오 전체 조회 -->
    <select id ="getvideoList" resultType="Video">
        SELECT *
        FROM Video
    </select>
    
    <!-- 게시글 상세 조회 -->
    <select id ="selectVideo" resultMap="videoMap" parameterType="int">
        SELECT *
        FROM Video
        WHERE video_id = #{video_id};
    </select>
    
    <!-- 비디오 삭제 -->
    <delete id="deleteVideo" parameterType="int">
        DELETE FROM Video
        WHERE video_id = #{video_id};
    </delete>
    
</mapper>
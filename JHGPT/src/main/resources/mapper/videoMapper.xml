<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.jhgpt.board.model.dao.VideoDao">

    <!-- 비디오 등록 -->
    <insert id="insertVideo" parameterType="Video">
        INSERT INTO Video(video_id, trainer_id, video_title, video_url, price)
        VALUES(#{video_id}, #{trainer_id}, #{video_title}, #{video_url}, #{price})
    </insert>
    
    <!-- 비디오 전체 조회 -->
    <select id ="selectAll" resultType="Video">
        SELECT *
        FROM Video
    </select>
    
    <!-- 게시글 상세 조회 -->
    <select id ="selectOne" resultType="Video" parameterType="int">
        SELECT *
        FROM Video
        WHERE video_id = #{video_id};
    </select>
    
    <!-- 비디오 삭제 -->
    <delete id="deleteVideo" parameterType="int">
        DELETE FROM Video
        WHERE video_id = #{video_id};
    </delete>
    
    <!-- 비디오 수정 -->
    <update id="updateVideo" parameterType="Video">
        UPDATE Video
        SET video_title = #{video_title}, video_url = #{video_url}, price = #{price}
        WHERE video_id = #{video_id};
    </update>
    
    <!-- 조회수 증가 -->
    <update id="updateViewCnt" parameterType="int">
		UPDATE Video
		SET view_cnt = view_cnt+1
		WHERE video_id = #{video_id}
	</update>
    
</mapper>